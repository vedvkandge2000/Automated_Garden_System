<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ooad_project.GardenUIController">
    <AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                prefHeight="641.0" prefWidth="1187.0" style="-fx-background-color: black;">
        <VBox layoutY="50.0" spacing="20" maxWidth="220" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" style="-fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 5);">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15" />
            </padding>
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(60,60,60,0.7); -fx-background-radius: 10px; -fx-padding: 10px;">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="DAY:" fill="white">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Text>
                <Label fx:id="currentDay" text="0" textFill="#ffd700">
                    <font>
                        <Font name="System Bold Italic" size="24.0"/>
                    </font>
                </Label>
            </HBox>
            <VBox spacing="5" style="-fx-background-color: rgba(0,102,204,0.6); -fx-background-radius: 10px; -fx-padding: 10px;">
                <HBox alignment="CENTER" spacing="10">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="WEATHER" fill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Text>
                </HBox>
                <VBox alignment="CENTER" spacing="5">
                    <StackPane fx:id="weatherIconContainer" alignment="CENTER">
                        <!-- Weather icon will be placed here -->
                    </StackPane>
                    <Label fx:id="rainStatusLabel" text="Sunny" textFill="white" alignment="CENTER" maxWidth="Infinity"
                           style="-fx-font-family: serif; -fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center;"/>
                </VBox>
            </VBox>
            <VBox spacing="5" style="-fx-background-color: rgba(204,51,0,0.6); -fx-background-radius: 10px; -fx-padding: 15px; -fx-min-height: 120px;">
                <HBox alignment="CENTER" spacing="10">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="TEMPERATURE" fill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Text>
                </HBox>
                <VBox alignment="CENTER" spacing="5" VBox.vgrow="ALWAYS">
                    <StackPane fx:id="temperatureIconContainer" alignment="CENTER">
                        <!-- Temperature icon will be placed here -->
                    </StackPane>
                    <Label fx:id="temperatureStatusLabel" text="Optimal" textFill="white" alignment="CENTER" maxWidth="Infinity"
                           style="-fx-font-family: serif; -fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center;"/>
                </VBox>
            </VBox>
            <VBox spacing="5" style="-fx-background-color: rgba(102,153,0,0.6); -fx-background-radius: 10px; -fx-padding: 10px;">
                <HBox alignment="CENTER" spacing="10">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PARASITE" fill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Text>
                </HBox>
                <VBox alignment="CENTER" spacing="5">
                    <StackPane fx:id="parasiteIconContainer" alignment="CENTER">
                        <!-- Parasite icon will be placed here -->
                    </StackPane>
                    <Label fx:id="parasiteStatusLabel" text="No Parasites" textFill="white" alignment="CENTER" maxWidth="Infinity"
                           style="-fx-font-family: serif; -fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center;"/>
                </VBox>
            </VBox>
        </VBox>

        <VBox alignment="CENTER" prefHeight="641.0" prefWidth="1187.0" spacing="10">
            <HBox alignment="CENTER" spacing="20">
                <GridPane fx:id="gridPane" AnchorPane.leftAnchor="260.0"
                          style=" -fx-background-color: rgba(144, 238, 144, 0);">
                </GridPane>
            </HBox>
        </VBox>

        <VBox alignment="TOP_RIGHT" spacing="15" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <MenuButton fx:id="treeMenuButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0"
                        text="Trees" textAlignment="CENTER" popupSide="BOTTOM"
                        style="-fx-background-radius: 15px; -fx-border-radius: 15px; -fx-background-color: #8BC34A; -fx-border-color: #689F38; -fx-border-width: 2px; -fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 2); -fx-content-display: CENTER;"/>
            <MenuButton fx:id="flowerMenuButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0"
                        text="Flowers" textAlignment="CENTER" popupSide="BOTTOM"
                        style="-fx-background-radius: 15px; -fx-border-radius: 15px; -fx-background-color: #FF9800; -fx-border-color: #F57C00; -fx-border-width: 2px; -fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 2); -fx-content-display: CENTER;"/>
            <MenuButton fx:id="vegetableMenuButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0"
                        text="Vegetable" textAlignment="CENTER" popupSide="BOTTOM"
                        style="-fx-background-radius: 15px; -fx-border-radius: 15px; -fx-background-color: #4CAF50; -fx-border-color: #388E3C; -fx-border-width: 2px; -fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 2); -fx-content-display: CENTER;"/>
        </VBox>
    </AnchorPane>
</StackPane>